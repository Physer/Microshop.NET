<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PublicDisplayName>ContainerConfiguration</PublicDisplayName>
		<AssemblyName>Microshop.$(PublicDisplayName)</AssemblyName>
		<RootNamespace>Microshop.$(PublicDisplayName.Replace(" ", "_"))</RootNamespace>
		<Title>Microshop.NET Container Configuration</Title>
		<Authors>Alex Schouls</Authors>
		<Copyright>Â© Alex Schouls</Copyright>
		<PackageProjectUrl>https://github.com/Physer/Microshop.NET</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Physer/Microshop.NET</RepositoryUrl>
		<VersionPrefix>2.1.0</VersionPrefix>
		<Description>A set of utility methods to quickly set up predefined and custom containers based on TestContainers.NET</Description>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Testcontainers" Version="3.6.0" />
	</ItemGroup>

</Project>
