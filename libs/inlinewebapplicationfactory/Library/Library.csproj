<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PublicDisplayName>InlineWebApplicationFactory</PublicDisplayName>
		<AssemblyName>Microshop.$(PublicDisplayName)</AssemblyName>
		<RootNamespace>Microshop.$(PublicDisplayName.Replace(" ", "_"))</RootNamespace>
		<Authors>Alex Schouls</Authors>
		<Description>A library to quickly set up an in-memory web application factory for
			Integration Testing, including support for Mass Transit's Test harnass.</Description>
		<Copyright>© Alex Schouls</Copyright>
		<PackageProjectUrl>https://github.com/Physer/Microshop.NET</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Physer/Microshop.NET</RepositoryUrl>
		<VersionPrefix>2.0.0</VersionPrefix>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MassTransit" Version="8.2.2" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="8.0.5" />
	</ItemGroup>

</Project>