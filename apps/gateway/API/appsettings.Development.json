{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Yarp": "Debug",
      "Microsoft.AspNetCore": "Debug"
    }
  }
  "ReverseProxy": {
    "Routes": {
      "authentication": {
        "Match": {
          "Hosts": [ "auth.localhost" ]
        }
      },
      "admin": {
        "Match": {
          "Hosts": [ "admin.localhost" ]
        }
      },
      "api": {
        "Match": {
          "Hosts": [ "api.localhost" ]
        }
      }
    },
    "Clusters": {
      "authentication": {
        "Destinations": {
          "authentication": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "admin": {
        "Destinations": {
          "admin": {
            "Address": "http://localhost:3000"
          }
        }
      },
      "api": {
        "Destinations": {
          "api": {
            "Address": "http://localhost:5005"
          }
        }
      }
    }
  }
}
