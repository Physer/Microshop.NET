@page
@model Web.Pages.GenerateDataModel;
@{
    Layout = "_AuthorizedLayout";
}

<div>
    <p>Press the button to generate random data:</p>
</div>
<form method="post">
    <button type="submit" class="btn btn-primary">Generate data</button>
    <div class="mt-3">
        @if (Model?.Success == true)
        {
            <div class="alert alert-light" role="alert">
                Data has been generated succesfully at @DateTime.UtcNow (UTC)
            </div>
        }
        else if(Model?.Success is not null && Model?.Success == false)
        {
            <div class="alert alert-danger" role="alert">
                Unable to generate data, please try again later!
            </div>
        }
    </div>
</form>