@page
@model Web.Pages.ManageDataModel;
@{
    Layout = "_AuthorizedLayout";
}

<div>
    <p>Use this page to perform actions on the data of Microshop.NET:</p>
</div>
<form method="post">
    <button id="generateDataButton" type="submit" class="btn btn-primary" asp-page-handler="Generate">Generate data</button>
    <br />
    <br />
    <button id="clearDataButton" type="submit" class="btn btn-primary" asp-page-handler="Clear">Clear data</button>

    <div class="mt-3">
        @if (Model?.Success == true)
    {
        <div class="alert alert-light" role="alert">
                Succesfully executed at @DateTime.UtcNow (UTC)
            </div>
    }
    else if (Model?.Success is not null && Model?.Success == false)
    {
        <div class="alert alert-danger" role="alert">
                Something went wrong, please try again later
            </div>
    }
    </div>
</form>